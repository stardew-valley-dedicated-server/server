########################################
#           Server Configuration       #
########################################

# Version
# Use "latest" for stable releases, "preview" for latest preview builds
# Or pin to a specific version like "1.0.0" or "1.1.0-preview.3"
# See available tags at: https://hub.docker.com/r/sdvd/server/tags
# IMAGE_VERSION=latest

# Game port for direct IP connections (UDP)
# Players can connect via IP:port if they can't use invite codes
GAME_PORT="24642"

# Disable rendering for headless operation (saves resources)
DISABLE_RENDERING=true

########################################
#          Game Settings File          #
########################################
# Game creation and runtime settings (farm name, farm type, cabin strategy, etc.)
# are configured via server-settings.json â€” NOT environment variables.
#
# The file is auto-created with defaults on first run inside the Docker settings volume.
# Edit it directly to customize your server. See docs for available options.

########################################
#            Steam Credentials         #
########################################

# Required for game download and ingame lobby authentication
STEAM_USERNAME=""
STEAM_PASSWORD=""
STEAM_REFRESH_TOKEN=""

########################################
#              VNC Access              #
########################################

# Web-based VNC for visual debugging and administration
VNC_PORT="5800"
VNC_PASSWORD=""

########################################
#            HTTP API Server           #
########################################

# Enable HTTP API for external tools and automation (default: true)
# API_ENABLED=true

# Port for the HTTP API server
# See /docs endpoint for interactive API documentation
API_PORT="8080"

########################################
#         Discord Bot (Optional)       #
########################################

# Discord bot token for server status display and chat relay
# Create a bot at https://discord.com/developers/applications
# Required permissions: Send Messages, Read Message History
# DISCORD_BOT_TOKEN=""

# Bot nickname in Discord servers (optional)
# If empty, automatically uses the farm name from the server
# Set a custom value to override (e.g., "Stardew Server")
# DISCORD_BOT_NICKNAME=""

# Channel ID for two-way chat relay (optional)
# Right-click channel > Copy ID (requires Developer Mode in Discord settings)
# Requires Message Content Intent enabled in Discord Developer Portal
# Leave empty to disable chat relay
# DISCORD_CHAT_CHANNEL_ID=""

########################################
#        Password Protection           #
########################################

# Server password for player authentication
# Leave empty to disable password protection
# When set, players must use !login <password> to play
# SERVER_PASSWORD=""

# Maximum failed login attempts before player is kicked (default: 3)
# MAX_LOGIN_ATTEMPTS=3

# Seconds before unauthenticated players are kicked (default: 120)
# Set to 0 to disable timeout (players can wait indefinitely)
# AUTH_TIMEOUT_SECONDS=120
