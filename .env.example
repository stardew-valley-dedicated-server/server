########################################
#           Server Configuration       #
########################################

# Version
# Use "latest" for stable releases, "preview" for latest preview builds
# Or pin to a specific version like "1.0.0" or "1.1.0-preview.3"
# See available tags at: https://hub.docker.com/r/sdvd/server/tags
# IMAGE_VERSION=latest

# Game
GAME_PORT="24642"
DISABLE_RENDERING=true

# Networking
# IP connections are disabled by default because they don't provide user IDs for farmhand ownership
# ALLOW_IP_CONNECTIONS=false

########################################
#         Password Protection          #
########################################

# Server password - players must type "!login <password>" in chat to play
# Leave empty to disable password protection
# SERVER_PASSWORD=""

# Maximum failed login attempts before auto-kick (default: 3)
# MAX_LOGIN_ATTEMPTS=3

# Authentication timeout in seconds - kick players who don't authenticate in time (default: 600 = 10 min)
# Set to 0 to disable timeout
# AUTH_TIMEOUT_SECONDS=600

# Steam
# Required for game download and ingame lobby authentication
STEAM_USERNAME=""
STEAM_PASSWORD=""
STEAM_REFRESH_TOKEN=""

# VNC
# Mainly useful for last resort debugging
VNC_PORT="5800"
VNC_PASSWORD=""

# Steam Auth Service
# Port for the internal Steam authentication service API
STEAM_AUTH_PORT="3001"

########################################
#            HTTP API Server           #
########################################

# Enable HTTP API for external tools and automated testing (default: true)
# API_ENABLED=true

# Port for the HTTP API server (default: 8080)
# Endpoints:
#   GET /status                  - Server status and game state (JSON)
#   GET /players                 - Connected players list (JSON)
#   GET /invite-code             - Current invite code (JSON)
#   GET /health                  - Health check (JSON)
#   GET /swagger/v1/swagger.json - OpenAPI 3.0 specification
#   GET /docs                    - Interactive API documentation (Scalar)
API_PORT="8080"

########################################
#         Discord Bot (Optional)       #
########################################

# Discord bot token for server status display
# Create a bot at https://discord.com/developers/applications
# DISCORD_BOT_TOKEN=""

########################################
#           Build Configuration        #
########################################

# Path to Stardew Valley installation directory
# Used by Directory.Build.props for building the mod and by decompile scripts
# Use forward slashes (/) for cross-platform compatibility (works on both Windows and Linux)
# Examples:
#   Windows: GAME_PATH="C:/Program Files (x86)/Steam/steamapps/common/Stardew Valley"
#   Linux:   GAME_PATH="/home/user/.steam/steam/steamapps/common/Stardew Valley"
#   CI:      GAME_PATH="/home/runner/actions-runner/_work/junimohost-stardew-server/junimohost-stardew-server/Stardew Valley"
GAME_PATH="C:/Program Files (x86)/Steam/steamapps/common/Stardew Valley"
